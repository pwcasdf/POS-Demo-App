<Page
    x:Class="POS_Demo_App.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:POS_Demo_App"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="93*"/>
        </Grid.RowDefinitions>

        <!-- title row  @pwcasdf -->
        <Grid Grid.Row="0" BorderThickness="3" BorderBrush="Black">
            <TextBlock Foreground="Black" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="25">
                POS Demo App
            </TextBlock>
        </Grid>
        
        <!-- menu & selected list row   @pwcasdf -->
        <Grid Grid.Row="1" Background="#FFF3F3F3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="7*"/>
            </Grid.ColumnDefinitions>

            <!-- left grid  @pwcasdf -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="68*"/>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="20*"/>
                </Grid.RowDefinitions>

                
            </Grid>

            <GridView Grid.Column="1" IsItemClickEnabled="True" ItemClick="OnMenuClick" ItemsSource="{Binding}">
                <GridView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Vertical">
                            <Image HorizontalAlignment="Center" VerticalAlignment="Center" Height="100" Source="{Binding Attributes.ImagePath}"/>
                            <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Text="{Binding Attributes.ImageName}"/>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
        </Grid>
        
        
        

    </Grid>
</Page>
